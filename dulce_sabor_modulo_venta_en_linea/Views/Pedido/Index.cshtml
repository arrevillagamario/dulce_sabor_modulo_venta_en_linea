@model CarritoViewModel;

@{
    ViewData["Title"] = "Pedido";
}
<style>
  body {
    background-image: url(/img/fondo.png);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .card {
    background-color: #bb8b90;
    color: white;
    margin-bottom: 100px;
  }
</style>
<div class="container">
  <div class="row justify-content-center" style="padding-top: 120px;">
    <div class="col-md-8">
            @if (Model.Detalles != null && Model.Detalles.Any())
            {
                @foreach (var item in Model.Detalles)
                {
                  <div class="card" style="border-radius: 10px;">
                    <div class="mt-3 mb-3">
                      <div class="px-5">
                        <h2 class="text-center text-6xl font-bold">Mi pedido</h2>
                        <h3 class="mt-4 mb-5 text-5xl"># Orden</h3>
                        <div class="flex items-center bg-white px-5 space-x-3 py-7 rounded-md">
                          <img src="/img/Carousell2.png" width="200px" height="200px" alt="producto a comprar" />
                          <div class="mt-3 h-50">
                            <p class="text-black max-h-40 overflow-scroll mt-4">
                            </p>
                          </div>
                        </div>
                        <div class="flex justify-end mt-3 ">
                          <p class="text-4xl font-bold">$10.00</p>
                        </div>
                        <div class="d-flex justify-content-center">
                          <button type="submit" data-bs-toggle="modal" data-bs-target="#exampleModal" class="w-100 py-2 rounded-md font-bold" style="background-color: #5d0c27; color: antiquewhite; margin-top:30px">Pagar</button>
                        </div>
                      </div>
                    </div>
                  </div>
                }
            }
            else
            {
            <p class="text-center text-3xl mt-5">Tu carrito está vacío. ¡Agrega productos para realizar tu pedido!</p>
            }
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header ">
        <h1 class="modal-title text-3xl text-center" id="exampleModalLabel">Pagar</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body space-y-3 px-5">
        <p class="text-4xl">Total a pagar: $10.00</p>
        <p class="text-2xl" style="color:#5d0c27">Seleccione su método de pago:</p>
      </div>
      <div class="modal-footer px-5 space-y-3 py-3">
        <button type="button" style="background-color: #5d0c27; color: antiquewhite;" class="w-100 py-2 rounded-md font-bold">Efectivo</button>
        <button type="button" style="background-color: #5d0c27; color: antiquewhite;" class="w-100 py-2 rounded-md font-bold">Tarjeta</button>
      </div>
    </div>
  </div>
</div>
@model IEnumerable<Plato>
@{
    ViewData["Title"] = "Menú principal";
}
<style>
    body {
        background-image: url(/img/fondo.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

</style>

<main>
    <section id="gallery">
        <div class="container">
            <h2 class="text-center">Platos</h2>
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        @foreach(var item in Model)
                        {
                            <div class="col-lg-4 mb-4">
                                <div class="card">
                                    <img src="@item.Imagen"
                                         alt=""
                                         class="card-img-top" />
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Nombre $@item.Precio</h5>
                                        <p class="card-text">
                                           @item.Descripcion
                                        </p>
                                        <div class="d-flex justify-content-center">

                                            <form method="post" asp-action="AgregarACarrito">
                                                <input type="hidden" value="@item.PlatoId"/>
                                                <button type="submit" style="background-color:#861138; color:white" class="btn btn-light">
                                                    Add
                                                    <i class="bi bi-cart4"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>